# template for "Guess the number" mini-project
# input will come from buttons and an input field
# all output for the game will be printed in the console
import simplegui
import random
import math

game_range = 100
try_count = 0






# helper function to start and restart the game
def new_game():
    # initialize global variables used in your code here

    # remove this when you add your code    
    global secret_number 
    global game_range
    global try_count
    secret_number = random.randrange(game_range)
    
    if game_range == 100:
        try_count = 7
    else:
        try_count = 10
        
    print "\nNew Game. Range is from 0 to", game_range
    print "Number of remaining guesses is",try_count
    
    


# define event handlers for control panel
def range100():
    # button that changes the range to [0,100) and starts a new game 
    
    # remove this when you add your code    
    global game_range
    game_range = 100 
    new_game()
    

def range1000():
    # button that changes the range to [0,1000) and starts a new game     
    global game_range
    game_range = 1000
    new_game()
    
def input_guess(guess):
    # main game logic goes here	
    
    # remove this when you add your code
    global try_count
    
    if int(guess) >= 0 and int(guess) <= game_range:
        guess_number = int(guess)
        try_count = try_count - 1     
        print "\nNumber of remaining guesses is",try_count
        
        if guess_number == secret_number:
            print "Correct! You won this time, but you won't win again!"
        elif guess_number > secret_number:
            print "Lower!"
        elif guess_number < secret_number:
            print "Higher!"
        else:
            print "Number not in Range"
            
        print "Guess was", guess_number
        
    else:
        print "\nPlease enter a guess inside the range!"
        
    if try_count == 0:
        print "Game Over."
        new_game()
        return 
    else:
        pass
        
    
        
     
        
    

    
# create frame
f = simplegui.create_frame("Guess the number", 200, 200)

# register event handlers for control elements and start frame
f.add_button("Range is [0,100)", range100, 200)
f.add_button("Range is [0,1000)", range1000, 200)
f.add_input("Enter Guess", input_guess, 200)

# call new_game 
new_game()



